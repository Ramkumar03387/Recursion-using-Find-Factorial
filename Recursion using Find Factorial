public class RecursionUsingFindFactorial 
{
	public static void main(String[] args) 
  {
		System.out.print("enter number: ");
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int res = hello(n);
		System.out.println(res);
	}

	private static int hello(int a) 
  {
		if(a==1)
			return a;
			
		else
			return a*hello(a-1);
	}
}
